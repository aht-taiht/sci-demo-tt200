<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    	<record id="confirm_wizard_form" model="ir.ui.view">
            <field name="name">confirm.wizard.form</field>
            <field name="model">confirm.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <p class="text-center" style="font-size: x-large;">
                        <field name="message" readonly="1"/>
                    </p>
                    <footer>
                        <button name="action_confirm" string="Confirm" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>