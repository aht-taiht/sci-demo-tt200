<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="vas_account_closing_entry_tree">
            <field name="name">vas.account.closing.entry.tree</field>
            <field name="model">vas.account.closing.entry</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="journal_id" />
                    <field name="company_id" />
                </tree>
            </field>
        </record>

        <record id="vas_account_closing_entry_form" model="ir.ui.view">
            <field name="name">vas.account.closing.entry.form</field>
            <field name="model">vas.account.closing.entry</field>
            <field name="arch" type="xml">
                <form string="VAS Account Closing Entry" readonly="state != 'draft'">
                    <header>
                        <button name="validate" invisible="state != 'draft'" string="Confirm"
                            type="object" class="oe_highlight" />
                        <field name="state" widget="statusbar" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1" />
                                <field name="show_update_btn" invisible="1"/>
                                <label for="date_from" />
                                <div class="o_row">
                                    <field name="date_from" string="Date" widget="daterange"
                                        options="{'end_date_field': 'date_to'}" />
                                    <field name="date_to" invisible="1" />
                                    <button name="action_update_entry_line" invisible="not show_update_btn" type="object"
                                        string=" Update Entry Lines"
                                        help="Recompute all accounts based on this date"
                                        class="btn-link mb-1 px-0" icon="fa-refresh"
                                        confirm="This will update the closing entry of all accounts based on the new date." />
                                </div>
                                <field name="journal_id" />
                                <field name="account_transfer_ids" widget="many2many_tags" invisible="1"/>
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                            <notebook>
                                <page string="Details">
                                    <field name="line_ids" readonly="state != 'draft'">
                                        <tree editable="bottom">
                                            <field name="name" />
                                            <field name="account_id" options="{'no_create': 1}" />
                                            <field name="offset_account_id"
                                                options="{'no_create': 1}" />
                                            <field name="debit" />
                                            <field name="credit" />
                                        </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_vas_account_closing_entry" model="ir.actions.act_window">
            <field name="name">VAS Account Closing Entry</field>
            <field name="res_model">vas.account.closing.entry</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>