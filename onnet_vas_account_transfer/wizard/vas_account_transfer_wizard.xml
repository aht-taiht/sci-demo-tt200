<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vas_account_transfer_wizard" model="ir.ui.view">
        <field name="name">vas.account.transfer.wizard.form</field>
        <field name="model">vas.account.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Account Transfer">
                <group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" />
                        <field name="from_date" string="Date" widget="daterange"
                            options="{'end_date_field': 'to_date'}" />
                        <field name="to_date" invisible="1" />
                        <field name="company_id" invisible="1"/>
                        <field name="journal_id" options="{'no_create': True}" domain="['|',('company_id','=',company_id),('company_id','=',False)]"/>
                    </group>
                </group>
                <footer>
                    <button string="Launch" class="btn-primary" name="create_vas_account_transfer"
                        type="object" data-hotkey="v" />
                    <button string="Discard" special="cancel" data-hotkey="z" />
                </footer>
            </form>
        </field>
    </record>
</odoo>